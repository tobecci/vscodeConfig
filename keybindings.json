// Place your key bindings in this file to override the defaultsauto[]
[
	{
		"key": "ctrl+alt+down",
		"command": "bookmarks.jumpToNext",
		"when": "editorTextFocus"
	},
	{
		"key": "ctrl+alt+l",
		"command": "-bookmarks.jumpToNext",
		"when": "editorTextFocus"
	},
	{
		"key": "ctrl+alt+up",
		"command": "bookmarks.jumpToPrevious",
		"when": "editorTextFocus"
	},
	{
		"key": "ctrl+alt+j",
		"command": "-bookmarks.jumpToPrevious",
		"when": "editorTextFocus"
	},
	{
		"key": "ctrl+k ctrl+r",
		"command": "workbench.action.reloadWindow",
		"when": ""
	},
	//
	//
	//
	//
	//
	//
	//
	//
	//redefine folding shortcuts to be easier to use
	{
		"key": "ctrl+[",
		"command": "editor.foldRecursively",
		"when": "editorTextFocus && foldingEnabled"
	},
	{
		"key": "ctrl+shift+[",
		"command": "editor.foldAll",
		"when": "editorTextFocus && foldingEnabled"
	},
	{
		"key": "ctrl+]",
		"command": "editor.unfoldRecursively",
		"when": "editorTextFocus && foldingEnabled"
	},
	{
		"key": "ctrl+shift+]",
		"command": "editor.unfoldAll",
		"when": "editorTextFocus && foldingEnabled"
	},
	{
		"key": "alt+[",
		"command": "editor.fold",
		"when": "editorTextFocus && foldingEnabled"
	},
	{
		"key": "alt+]",
		"command": "editor.unfold",
		"when": "editorTextFocus && foldingEnabled"
	},
	{
		"key": "ctrl+m",
		"command": "workbench.action.toggleEditorWidths",
		"when": ""
	},
	{
		"key": "ctrl+shift+right",
		"command": "editor.action.indentLines",
		"when": "editorTextFocus && !editorReadonly"
	},
	{
		"key": "ctrl+shift+left",
		"command": "editor.action.outdentLines",
		"when": "editorTextFocus && !editorReadonly"
	},
	{
		"key": "ctrl+s",
		"command": "workbench.action.files.saveWithoutFormatting",
		"when": ""
	},
	{
		"key": "ctrl+alt+s",
		"command": "runCommands",
		"args": {
			"commands": [
				"editor.action.formatChanges",
				"workbench.action.files.save"
			]
		},
		"when": ""
	},

	{
		"key": "ctrl+shift+s",
		"command": "runCommands",
		"args": {
			"commands": [
				"editor.action.formatDocument",
				"workbench.action.files.save"
			]
		},
		"when": ""
	},
	{
		"key": "ctrl+shift+alt+s",
		"command": "runCommands",
		"args": {
			"commands": [
				"editor.action.formatSelection",
				"workbench.action.files.save"
			]
		},
		"when": ""
	},
	{
		"key": "ctrl+shift+j",
		"command": "editor.action.joinLines",
		"when": ""
	},
	{
		"key": "ctrl+b",
		"command": "workbench.action.toggleSidebarVisibility",
		"when": ""
	},
	//
	{
		"key": "ctrl+e",
		"command": "runCommands",
		"args": {
			"commands": [
				"closeFindWidget",
				"outline.focus",
				"outline.removeView",
				"workbench.files.action.collapseExplorerFolders",
				"workbench.files.action.focusOpenEditorsView",
				"workbench.explorer.openEditorsView.removeView",
				"revealInExplorer",
			]
		},
		"when": ""
	},
	{
		"key": "ctrl+shift+e",
		"command": "copyFilePath",
		"when": ""
	},
	//
	{
		"key": "ctrl+shift+enter",
		"command": "runCommands",
		"args": {
			"commands": [
				"closeFindWidget",
				"workbench.action.closeSidebar",
				"workbench.action.closePanel",
				"workbench.action.closeAuxiliaryBar",
				"workbench.action.closeQuickOpen"
			]
		},
		"when": "findWidgetVisible || sideBarVisible || panelVisible || auxiliaryBarVisible"
	},
	{
		"key": "ctrl+shift+enter",
		"command": "workbench.action.navigateEditorGroups",
		"when": "!findWidgetVisible &&!sideBarVisible && !panelVisible && !auxiliaryBarVisible"
	},
	{
		"key": "shift+enter",
		"command": "workbench.action.showAllEditorsByMostRecentlyUsed",
		"when": ""
	},
	{
		"key": "alt+enter",
		"command": "workbench.action.showEditorsInActiveGroup",
		"when": ""
	},
	{
		"key": "ctrl+shift+,",
		"command": "workbench.action.openGlobalKeybindingsFile",
		"when": ""
	},
	{
		"key": "ctrl+,",
		"command": "workbench.action.openSettingsJson",
		"when": ""
	},
	{
		"key": "ctrl+left",
		"command": "workbench.action.navigateBack",
		"when": ""
	},
	{
		"key": "ctrl+right",
		"command": "workbench.action.navigateForward",
		"when": ""
	},
	//close all windows in all groups
	{
		"key": "ctrl+shift+w",
		"command": "runCommands",
		"args": {
			"commands": [
				"workbench.action.closeAllGroups",
				"workbench.explorer.fileView.focus",
			]
		},
		"when": ""
	},
	{
		"key": "ctrl+r",
		"command": "editor.action.rename",
		// "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
		"when": ""
	 },
	 {
		"key": "ctrl+shift+r",
		"command": "editor.action.goToReferences",
		"when": ""
		// "when": "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
	 },
	 {
		"key": "ctrl+l",
		"command": "workbench.action.openRecent",
		"when": ""
	 },

	//open new editor group
	{
		"key": "ctrl+\\",
		"command": "workbench.action.splitEditorRight",
		"when": ""
	},
		{
		"key": "ctrl+shift+\\",
		"command": "workbench.action.splitEditorDown",
		"when": ""
	},
		{
		"key": "ctrl+shift+l",
		"command": "workbench.action.toggleEditorGroupLock",
		"when": ""
	},
	{
		"key": "ctrl+shift+t",
		"command": "workbench.action.terminal.focusNext",
		"when": ""
	},
	{
		"key": "ctrl+shift+o",
		"command": "runCommands",
		// workbench.action.gotoSymbol
		"args": {
			"commands": [
				"workbench.files.action.focusOpenEditorsView",
				"workbench.explorer.openEditorsView.removeView",
				"workbench.files.action.focusFilesExplorer",
				// "workbench.explorer.fileView.toggleVisibility",
				// "",
				// ""
				// "outline.expand",
				"outline.focus",
				"outline.expand",
				"outline.filterOnType",
				"outline.sortByName",
			]
		},
		"when": ""
	},
	{
		"key": "ctrl+o",
		"command": "workbench.action.gotoSymbol",
		"when": ""
	},
	// external terminal
	{
		"key": "ctrl+shift+alt+t",
		"command": "workbench.action.terminal.openNativeConsole",
		"when": ""
	},
	{
		"key": "ctrl+t",
		"command": "terminal.focus",
		"when": ""
	},
	{
		"key": "ctrl+shift+t",
		"command": "workbench.action.terminal.openNativeConsole",
		// "command": "workbench.action.terminal.focusNext",
		"when": ""
	},
